import java.util.Scanner;
import java.util.Arrays;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int K = sc.nextInt();
        int[] X = new int[N];
        
        for(int i=0; i<N; i++)
            X[i] = sc.nextInt();
        
        Arrays.sort(X);
        
        System.out.print(X[X.length-K]);
    }
}
